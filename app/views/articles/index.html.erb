<div class="tile is-ancestor">
  <% @articles.each do |article| %>
    <div class="tile is-4 is-vertical is-parent">
      <div class="tile is-child card">
        <div class="card-image">
          <figure class="image is-3by2">
            <%= image_tag article.images.first.representation(resize_to_limit: [500, 500]) %>
          </figure>
        </div>
        <div class="card-content">
          <p class="is-size-3">
            <%= article.title %>
          </p>
          <p class="is-size-4">
            <%= number_to_currency article.price, unit: 'CHF' %>
          </p>
        </div>
        <footer class="card-footer">
          <%= link_to 'Anzeigen', article, class: 'card-footer-item' %>
          <% if policy(article).edit? %>
            <%= link_to 'Anpassen', edit_article_path(article), class: 'card-footer-item' %>
          <% end %>
        </footer>
      </div>
    </div>
  <% end %>
</div>
